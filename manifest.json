{
  "manifest_version": 3,
  "name": "ClickDefender",
  "version": "1.0",
  "description": "Real-time phishing detection browser plug-in with explainable risk scoring.",
  "permissions": ["storage", "tabs", "activeTab"],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_title": "ClickDefender"
  }
}
