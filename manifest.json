{
  "manifest_version": 3,
  "name": "ClickDefender",
  "version": "0.1",
  "description": "Real-time phishing detection browser plug-in with explainable risk scoring.",
  "permissions": [
    "tabs",
    "storage",
    "activeTab",
    "scripting",
    "cookies"
  ],
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "action": {
    "default_title": "ClickDefender",
    "default_popup": "popup.html",
    "default_icon": {
      "48": "images/icon48.png",
      "64": "images/icon64.png"
    }
  },
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self';"
  },
  "icons": {
    "48": "images/icon48.png",
    "64": "images/icon64.png",
    "128": "images/icon128.png"
  },
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "content.js"
      ],
      "run_at": "document_end"
    }
  ],
  "host_permissions": [
    "<all_urls>",
    "https://safebrowsing.googleapis.com/*"
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "images/icon48.png",
        "images/icon64.png",
        "images/icon128.png",
        "content.css"
      ],
      "matches": [
        "<all_urls>"
      ]
    }
  ]
}